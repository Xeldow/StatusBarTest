<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/status_bar_parent"
    android:background="#181818"
    android:layout_height="@dimen/dimen_status_bar_height">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_status_bar_gap_2">

            <ImageView
                android:id="@+id/iv_signal_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_signal_zero" />

            <ImageView
                android:id="@+id/iv_airplane_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_airplane_mode"
                android:visibility="gone" />

        </FrameLayout>

        <LinearLayout
            android:id="@+id/ll_data_traffic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_status_bar_gap_2"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_data_traffic_network_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_status_bar_gap_2"
                android:src="@drawable/ic_data_traffic_network_4g" />

            <ImageView
                android:id="@+id/tv_data_traffic_transmitted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_data_traffic_transmitted_normal" />

            <ImageView
                android:id="@+id/tv_data_traffic_received"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_data_traffic_received_normal" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_status_bar_gap_2"
            android:src="@drawable/ic_wifi_three"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_status_bar_gap_2"
            android:src="@drawable/ic_download"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_hd_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_hd_voice"
            android:visibility="gone" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_telecom_operators"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/color_white"
        android:textSize="@dimen/dimen_status_bar_text_size" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_gps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:src="@drawable/ic_gps"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_bluetooth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_status_bar_gap_2"
            android:src="@drawable/ic_bluetooth"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_international_roaming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_status_bar_gap_2"
            android:src="@drawable/ic_international_roaming"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_alarm_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_status_bar_gap_2"
            android:src="@drawable/ic_alarm_clock"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_battery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_battery_7" />

    </LinearLayout>

</RelativeLayout>